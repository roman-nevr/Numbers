<?xml version="1.0" encoding="UTF-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item
        android:state_pressed="true"
        >
        <layer-list>
            <item
                android:left="@dimen/digital_buuton_margin"
                android:right="@dimen/digital_buuton_margin"
                android:bottom="@dimen/digital_buuton_margin"
                android:top="@dimen/digital_buuton_margin"
                >
                <shape
                    android:shape="rectangle">
                    <solid android:color="@color/btnDigTextColor"/>
                    <corners android:bottomRightRadius="@dimen/digital_button_corner_radius"
                             android:bottomLeftRadius="@dimen/digital_button_corner_radius"
                             android:topLeftRadius="@dimen/digital_button_corner_radius"
                             android:topRightRadius="@dimen/digital_button_corner_radius"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item
        android:state_selected="false"
        android:state_focused="false"
        android:state_pressed="false"
        >
        <layer-list>
            <item
                android:left="@dimen/digital_buuton_margin"
                android:right="@dimen/digital_buuton_margin"
                android:bottom="@dimen/digital_buuton_margin"
                android:top="@dimen/digital_buuton_margin"
                >
                <shape
                    android:shape="rectangle">
                    <solid android:color="@color/infoGreen"/>
                    <corners android:bottomRightRadius="@dimen/digital_button_corner_radius"
                             android:bottomLeftRadius="@dimen/digital_button_corner_radius"
                             android:topLeftRadius="@dimen/digital_button_corner_radius"
                             android:topRightRadius="@dimen/digital_button_corner_radius"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
